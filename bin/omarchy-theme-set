#!/bin/bash

if [[ -z $1 && $1 != "CNCLD" ]]; then
  echo "Usage: nixconfig-theme-set <theme-name>"
  exit 1
fi

THEMES_DIR="$HOME/.config/nixconfig/themes/"
CURRENT_THEME_DIR="$HOME/.config/nixconfig/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR"
  exit 1
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Change background with theme
nixconfig-theme-bg-next

# Restart components to apply new theme
nixconfig-restart-waybar
nixconfig-restart-swayosd
hyprctl reload
pkill -SIGUSR2 btop
makoctl reload

# Change gnome, browser, vscode themes
nixconfig-theme-set-terminal
nixconfig-theme-set-gnome
nixconfig-theme-set-eza
nixconfig-theme-set-browser
nixconfig-theme-set-vscode
